{
  "name": "auh-with-express",
  "version": "1.0.0",
  "main": "./src/main/server.ts",
  "license": "MIT",
  "description": "Autenticação basica com emal e senha, utilizando JWT para controlar acesso, utilizando os principios do SOLID, TDD, DDD",
  "author": {
    "name": "Rodrigo Silva",
    "email": "rodsilvavieira@gmail.com"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "jest --runInBand --no-cache --silent",
    "test:unit": "npm test -- -c jest-unit.config.ts",
    "test:e2e": "npm test -- -c jest-e2e.config.ts",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9229 --transpile-only --ignore-watch node_modules --respawn --exit-child src/main/server.ts",
    "build": "npx rimraf dist && babel src --extensions \".js,.ts,\" --out-dir dist && node copy-docs-files.js",
    "start": "node dist/main/server.js"
  },
  "keywords": [
    "node",
    "SOLID",
    "TDD",
    "DDD",
    "jest",
    "authentication",
    "typescript"
  ],
